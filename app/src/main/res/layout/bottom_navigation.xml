<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/bottom_navigation.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/nav_background"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- About Us Tab -->
    <LinearLayout
        android:id="@+id/nav_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/nav_about_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_info"
            android:tint="@color/nav_icon_unselected" />

        <TextView
            android:id="@+id/nav_about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="About"
            android:textColor="@color/nav_text_unselected"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Home Tab -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/nav_home_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            android:tint="@color/purple_text" />

        <TextView
            android:id="@+id/nav_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Home"
            android:textColor="@color/purple_text"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Tasks Tab -->
    <LinearLayout
        android:id="@+id/nav_tasks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/nav_tasks_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_tasks"
            android:tint="@color/nav_icon_unselected" />

        <TextView
            android:id="@+id/nav_tasks_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tasks"
            android:textColor="@color/nav_text_unselected"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</LinearLayout>